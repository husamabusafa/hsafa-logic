generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String   @id @default(cuid())
  email          String   @unique
  name           String
  passwordHash   String   @map("password_hash")
  hsafaEntityId  String?  @map("hsafa_entity_id")
  hsafaSpaceId   String?  @map("hsafa_space_id")
  hsafaSecretKey String?  @map("hsafa_secret_key")
  hsafaPublicKey String?  @map("hsafa_public_key")
  agentEntityId  String?  @map("agent_entity_id")
  createdAt      DateTime @default(now()) @map("created_at")
  updatedAt      DateTime @updatedAt @map("updated_at")

  @@map("users")
}
